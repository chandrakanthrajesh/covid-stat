<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css" />
    <link rel="stylesheet" href="../assets/style.css">
    <script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        #map{position: absolute;top:0;bottom:0;left:0;right:0;}
    </style>
</head>
<body>
    <%- include('partials/header.ejs') %>
    <div id = 'map'></div>
    <script>
        //setting Lats and Longs
        var map = L.map('map').setView([0,0],1);  
        L.tileLayer('https://api.maptiler.com/maps/voyager/{z}/{x}/{y}.png?key=GWskAOoA5zaOi998A8ui',{
        attribution: '<a href="https://carto.com/" target="_blank">&copy; CARTO</a> <a href="https://www.maptiler.com/copyright/" target="_blank">&copy; MapTiler</a> <a href="https://www.openstreetmap.org/copyright" target="_blank">&copy; OpenStreetMap contributors</a>'}).addTo(map);
        var marker = L.marker([51.5,-0.09]).addTo(map);
        marker.bindPopup('Hi there I am here!').openPopup();
    </script>
</body>
</html>